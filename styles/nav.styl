/* ==========================================================================
   Navigation
   ========================================================================== */

nav
    font-size 2rem
    background-color white
    border 1px solid lightgrey

/* Single level nav
   -------------------------------------------------------------------------- */
.nav-single
    position relative
    min-height 5rem // 1 + 1 = 2rem a-tag paddings + 2rem font-size * 1.5 line-height
    box-sizing content-box

    > ul
        list-style none
        margin 0
        padding 0

    a
        color white
        color black
        text-decoration none
        padding 1rem 2rem
        text-align center

        &:focus, &:hover
            background-color bgcolor

    > button
        display block
        position absolute
        right 0
        top 0
        bottom 0
        border 0
        background-color white
        &:focus, &:hover
            background-color bgcolor
        &:before
            icon "..."
            margin-right .3em

    button + ul
        background-color white
        border 1px solid lightgrey
        position absolute
        right -1px
        top 100%
        z-index 1

        li, a
            display block

.nav-visible
    display table
    height 100%

    > li
        display inline-table
        height 100%
        vertical-align middle

        > a
            display table-cell
            height 100%
            vertical-align middle

