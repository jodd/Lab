input[type=text],
input[type=email],
input[type=search],
input[type=password]
    width 100%
    height 3.5rem

textarea
    resize vertical // Allow only vertical resizing of textareas
    padding .4rem .6rem

select
    height 2rem
    .js &
        opacity 0

[role='listbox']
    height 3rem
    &:before
        content ""
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        outline 0 solid lightblue
        outline-offset 1.6rem
        transition box-shadow .2s linear .1s,
            outline-offset .3s ease-out,
            outline-color .3s linear

    &:focus
        &:before
            box-shadow 0 0 6px darkblue
            outline 4px solid transparent
            outline-offset -1px

        > span
            border-color darkblue

    > span
        line-height 3rem
        padding 0 2rem 0 .6rem
        border 1px solid darkgrey
        border-radius 3px
        &:after
            icon "listbox"
            font-size 1.5rem
            right 0


    > ul, > ol
        background-color hsl(0,0,94)
        border-color hsl(0,0,60)
        border-radius 3px
        box-shadow 0 0 9px hsla(0,0,0,.3)

    [role='option']
        &:before
            icon "checkmark"
        &:focus,
        &:hover
            color black
            background-color hsl(30, 90, 60)


    [aria-selected='true']
        color hsl(200, 90, 45)

    &[aria-disabled='true']
        &:focus
            &:before
                box-shadow none
            > span
                border-color darkgrey