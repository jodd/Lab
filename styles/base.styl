label
    color grey

input[type=text],
input[type=email],
input[type=search],
input[type=password],
textarea
    width 100%
    padding 0 .6rem
    background-color hsl(0, 0, 98)
    border 1px solid darkgrey
    border-radius 3px
    box-shadow inset 0 0 4px hsla(0, 0, 0, 0.1)
    outline 0 solid lightblue
